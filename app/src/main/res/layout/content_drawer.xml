<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DrawerActivity"
    android:background="#ede5e5"
    tools:showIn="@layout/app_bar_drawer">

    <ImageView
        android:background="#b34b48d8"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <!--change with image-->
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/mtvNamaDrawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Ruman Sakit Umum"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvNormDrawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Syifa Medika"
                android:textColor="@android:color/white"
                android:textSize="18dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#00ffffff"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:elevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgjadwalPoli"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/kalender" />

                            <TextView
                                android:layout_width="126dp"
                                android:layout_height="29dp"
                                android:gravity="center"
                                android:text="Jadwal Poliklinik" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:elevation="2dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="74dp"
                                android:layout_height="70dp"
                                android:onClick="DokterPrakter"
                                android:src="@drawable/dokter" />

                            <TextView
                                android:layout_width="126dp"
                                android:layout_height="29dp"
                                android:gravity="center"
                                android:text="Dokter Praktek" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:elevation="2dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="74dp"
                                android:layout_height="70dp"
                                android:onClick="Ambulance"

                                android:src="@drawable/ambulance" />

                            <TextView
                                android:layout_width="126dp"
                                android:layout_height="29dp"
                                android:gravity="center"
                                android:onClick="Ambulance"
                                android:text="Ambulan" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:elevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgPemesanan"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/jadwal2" />

                            <TextView
                                android:layout_width="126dp"
                                android:layout_height="29dp"
                                android:gravity="center"
                                android:text="Jadwal Poliklinik" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:elevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:onClick="Fasilitas"
                                android:src="@drawable/logo" />

                            <TextView
                                android:layout_width="126dp"
                                android:layout_height="29dp"
                                android:gravity="center"
                                android:text="Fasilitas" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:elevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgTelpDarurat"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:onClick="TeleponDarutar"
                                android:src="@drawable/telepon" />

                            <TextView
                                android:layout_width="126dp"
                                android:layout_height="29dp"
                                android:gravity="center"
                                android:onClick="TeleponDarutar"
                                android:text="Panggilan Darurat" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>




                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>



