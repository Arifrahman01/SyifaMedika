<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Daftar.MenuDaftarActivity">

    <RelativeLayout
        android:layout_width="339dp"
        android:layout_height="87dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btDaftardenganEmail"
            android:layout_width="274dp"
            android:layout_height="37dp"
            android:layout_below="@+id/btLoginNophone"
            android:layout_centerHorizontal="true"
            android:text="Daftar Dengan Email" />

        <Button
            android:id="@+id/btLoginNophone"
            android:layout_width="272dp"
            android:layout_height="38dp"
            android:layout_below="@+id/btDaftarDenganGoogle"
            android:layout_centerHorizontal="true"
            android:text="Daftar Dengan Nomor Handphone" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>