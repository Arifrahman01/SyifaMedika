<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <EditText
        android:id="@+id/etNamaProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="89dp"
        android:ems="10"
        android:gravity="right"
        android:hint="Nama Lengkap"
        android:inputType="textPersonName"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etTmptlahirProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etNamaProfile"
        android:ems="10"
        android:gravity="right"
        android:hint="Tempat Lahir"
        android:inputType="textPersonName"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/etNamaProfile"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/etAlamatProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etTmptlahirProfile"
        android:ems="10"
        android:gravity="right"
        android:hint="Alamat Lengkap"
        android:inputType="textPersonName"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btSimpanProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="106dp"
        android:text="Simpan" />

    <Button
        android:id="@+id/btLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btSimpanProfile"
        android:layout_centerHorizontal="true"
        android:text="Logout" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="44dp"
        android:layout_height="33dp"
        android:layout_alignBaseline="@+id/etDate"
        android:layout_alignParentEnd="true"
        android:text="Set"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btCekProfile"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btSimpanProfile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:onClick="cekProfile"
        android:text="Cek" />

    <TextView
        android:id="@+id/tvKartu"
        android:layout_width="134dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:text="Set Tanggal"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etAlamatProfile"
        android:ems="10"
        android:enabled="false"
        android:gravity="right"
        android:hint="dd/mm/yyyy"
        android:inputType="textPersonName"
        android:textSize="12dp" />


</RelativeLayout>