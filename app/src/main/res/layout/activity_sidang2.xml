<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Sidang2Activity">
    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Aplikasi Data Buku"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tvKodeBuku"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kode Buku " />

    <TextView
        android:id="@+id/tvJudulBuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="judul Buku" />

    <TextView
        android:id="@+id/tvPengarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Pengarang" />

    <TextView
        android:id="@+id/tvPenerbit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Penerbit" />

    <Button
        android:id="@+id/btTambahBuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Data" />

    <Button
        android:id="@+id/btHapusData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hapus Data" />


</LinearLayout>