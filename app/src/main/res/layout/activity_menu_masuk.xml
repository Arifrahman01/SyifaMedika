<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#63cbc4"
    android:orientation="vertical"
    tools:context=".Daftar.MenuMasukActivity">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:text="Pilih Media Untuk Masuk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="368dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btMasukdenganEmail"
            android:layout_width="274dp"
            android:layout_height="37dp"
            android:layout_below="@+id/btLoginNophone"
            android:layout_centerHorizontal="true"
            android:text="Masuk Dengan Email" />

        <Button
            android:id="@+id/btLoginNophone"
            android:layout_width="272dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            android:text="Masuk Dengan Nomor Handphone" />

        <Button
            android:id="@+id/btMasukDenganGoogle"
            android:layout_width="274dp"
            android:layout_height="37dp"
            android:layout_below="@+id/btMasukdenganEmail"
            android:layout_centerHorizontal="true"
            android:text="Masuk Dengan Google" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>