<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Daftar.DaftarPoliklinikActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/xtView34"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Pendaftaran Poliklinik" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edNamaPolii"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="Nama Lengkap"
                android:inputType="textPersonName"
                android:textSize="12dp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textViw37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poliklinik Tujuan" />

        <Spinner
            android:id="@+id/spPoli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViw3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Dokter Spesialis" />

        <Spinner
            android:id="@+id/spDokterPoli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tex37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Pemesanan" />

        <Spinner
            android:id="@+id/spWwaktuPoli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btDaftarPolii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Daftar" />
        <TextView
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/tvNormPoli"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>